<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:padding="16dp"
    tools:context="com.example.myapplication.MainActivity"
    android:id="@+id/relative_layout2">


    <LinearLayout
        android:id="@+id/layoutItem"
        android:layout_width="wrap_content"
        android:layout_height="195dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edt_bkgd"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingLeft="15dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/textViewChildName1"
                android:layout_width="197dp"
                android:layout_height="45dp"
                android:clickable="true"
                android:focusable="false"
                android:fontFamily="sans-serif-smallcaps"
                android:inputType="text"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <RelativeLayout
                android:id="@+id/badge_notificatin"
                android:layout_width="68dp"
                android:layout_height="45dp"
                android:layout_marginLeft="37dp"
                android:layout_toRightOf="@+id/textViewChildName1"
                android:gravity="center|right"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/relative_layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/buttonPng"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/notificationcount"
                        android:clickable="true"
                        android:focusable="false"
                        android:gravity="center" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/noificationTextView"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignRight="@+id/relative_layout1"
                    android:background="@drawable/item_count"
                    android:clickable="true"
                    android:focusable="false"
                    android:text="16"
                    android:textColor="#fff"
                    android:textSize="7dp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linearLayoutBD"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/textViewChildName1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="Birthday:"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/textViewBir"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutHA"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/linearLayoutBD"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="129dp"
                    android:layout_height="match_parent"
                    android:text="Home Adress:"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textViewHomeAdress"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutSA"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/linearLayoutHA"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="129dp"
                    android:layout_height="30dp"
                    android:text="School Adress:"
                    android:textSize="18dp"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/textViewSchoolAdress"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
